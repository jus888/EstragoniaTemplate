<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="EstragoniaTemplate.UI.App"
             xmlns:local="using:EstragoniaTemplate.UI"
             RequestedThemeVariant="Light">
	<!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceInclude Source="Theme/Common.axaml" />
				<ResourceInclude Source="Theme/AdornerLayer.axaml" />
				<ResourceInclude Source="Theme/Button.axaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Application.Resources>

	<Application.Styles>
		<Styles>

			<SimpleTheme />

			<!--<StyleInclude Source="Theme/_Styles.axaml" />-->

			<Style Selector=":is(TopLevel)">
				<Setter Property="FontFamily" Value="{StaticResource StandardFontFamily}" />
				<Setter Property="FontSize" Value="{StaticResource NormalFontSize}" />
				<Setter Property="Foreground" Value="{StaticResource ForegroundBrush}" />
			</Style>

		</Styles>
	</Application.Styles>
</Application>