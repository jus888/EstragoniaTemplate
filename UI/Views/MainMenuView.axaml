<UserControl
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="using:EstragoniaTemplate.UI"
	xmlns:vm="using:EstragoniaTemplate.UI.ViewModels"
	mc:Ignorable="d" d:DesignWidth="960" d:DesignHeight="540"
	x:Class="EstragoniaTemplate.UI.Views.MainMenuView"
	RenderOptions.TextRenderingMode="Antialias"
	XYFocus.NavigationModes="Enabled"
	XYFocus.UpNavigationStrategy="Projection"
  XYFocus.DownNavigationStrategy="Projection"
  XYFocus.LeftNavigationStrategy="Projection"
  XYFocus.RightNavigationStrategy="Projection">

	<Design.DataContext>
		<vm:MainMenuViewModel />
	</Design.DataContext>

	<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
		<Button>
			<TextBlock Text="{Binding ButtonName}" />
		</Button>
		<Button Content="Button B" />
		<Button Content="Button C" />
	</StackPanel>

</UserControl>