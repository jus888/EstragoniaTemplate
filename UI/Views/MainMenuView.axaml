<ui:MainMenuView
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:ui="using:EstragoniaTemplate.UI"
	xmlns:vm="using:EstragoniaTemplate.UI.ViewModels"
	mc:Ignorable="d" d:DesignWidth="960" d:DesignHeight="540"
	x:Class="EstragoniaTemplate.UI.Views.MainMenuView"
	x:DataType="vm:MainMenuViewModel"
	RenderOptions.TextRenderingMode="Antialias">

	<Design.DataContext>
		<vm:MainMenuViewModel />
	</Design.DataContext>

	<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
		<Button Name="InitialFocus0"
						Command="{Binding ToOptions}">
			Options
		</Button>
	</StackPanel>

</ui:MainMenuView>