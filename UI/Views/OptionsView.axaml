<ui:OptionsView
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:ui="using:EstragoniaTemplate.UI"
	xmlns:vm="using:EstragoniaTemplate.UI.ViewModels"
	xmlns:model="using:EstragoniaTemplate.UI.Models"
	xmlns:sys="clr-namespace:System;assembly=mscorlib"	
	mc:Ignorable="d" d:DesignWidth="960" d:DesignHeight="540"
	x:Class="EstragoniaTemplate.UI.Views.OptionsView"
	x:DataType="vm:OptionsViewModel">

	<ui:OptionsView.DataTemplates>
		<ui:ViewLocator/>
	</ui:OptionsView.DataTemplates>	

	<Design.DataContext>
		<vm:OptionsViewModel>
			<x:Arguments>
				<vm:OptionsGraphicsViewModel>
					<x:Arguments>
						<model:UIOptions />
					</x:Arguments>
				</vm:OptionsGraphicsViewModel>
			</x:Arguments>
		</vm:OptionsViewModel>
	</Design.DataContext>

	<Border BorderBrush="Black"
			BorderThickness="1"
			HorizontalAlignment="Center"
			VerticalAlignment="Center">
		
		<StackPanel>
			<!-- Top Bar -->
			<Border BorderBrush="Black"
					BorderThickness="0,0,0,1">
				<Button HorizontalAlignment="Right"
						BorderThickness="1,0,0,0"
						Command="{Binding CloseCommand}"
						IsCancel="True">
					Exit
				</Button>
			</Border>
			
			<!-- Main Content-->
			<StackPanel Orientation="Horizontal">
				
				<!-- Tabs -->
				<StackPanel Width="100">
					<Button Theme="{StaticResource TextButton}" 
							Command="{Binding ToOptionsTabCommand}">
						<Button.CommandParameter>
							<sys:Int32>0</sys:Int32>
						</Button.CommandParameter>
						Graphics
					</Button>
					<Button Theme="{StaticResource TextButton}"
							Command="{Binding ToOptionsTabCommand}">
						<Button.CommandParameter>
							<sys:Int32>1</sys:Int32>
						</Button.CommandParameter>
						Controls
					</Button>
				</StackPanel>
				
				<!-- Content -->
				<ContentControl MinWidth="200" Content="{Binding CurrentViewModel}" />
			</StackPanel>
		</StackPanel>
	</Border>

</ui:OptionsView>