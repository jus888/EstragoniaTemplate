<UserControl
	x:Name="root"
	Focusable="True"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:ui="using:EstragoniaTemplate.UI"
	x:Class="EstragoniaTemplate.UI.Controls.SliderFocusser">
	
	<ContentControl Name="sliderContentControl"
					XYFocus.NavigationModes="{Binding #root.XYFocusMode}"
					Content="{Binding #root.Slider}"/>
</UserControl>