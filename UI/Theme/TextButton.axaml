<ResourceDictionary
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:behaviors="using:GameMenu.UI.Behaviors"
	xmlns:controls="using:GameMenu.UI.Controls">

	<Design.PreviewWith>
		<Border Background="White">
			<StackPanel Spacing="20" Margin="20">
				<Button Theme="{StaticResource TextButton}" Content="Button 1" />
				<Button Theme="{StaticResource TextButton}" Content="Button 1" 
						IsEnabled="False" />
			</StackPanel>
		</Border>
	</Design.PreviewWith>

	<ControlTheme x:Key="TextButton" TargetType="Button">
		<Setter Property="Background" Value="Transparent" />
		<Setter Property="BorderBrush" Value="{StaticResource ButtonNormalBackgroundBrush}" />
		<Setter Property="BorderThickness" Value="0" />
		<Setter Property="FontWeight" Value="600" />
		<Setter Property="Padding" Value="10, 4" />
		<Setter Property="HorizontalContentAlignment" Value="Center" />
		<Setter Property="VerticalContentAlignment" Value="Center" />

		<Setter Property="Template">
			<ControlTemplate>
				<Border
					Background="{TemplateBinding Background}"
					BorderBrush="{TemplateBinding BorderBrush}"
					BorderThickness="{TemplateBinding BorderThickness}"
					CornerRadius="{TemplateBinding CornerRadius}"
					Padding="{TemplateBinding Padding}">

					<ContentPresenter
						Content="{TemplateBinding Content}"
						ContentTemplate="{TemplateBinding ContentTemplate}"
						RecognizesAccessKey="True" />

				</Border>
			</ControlTemplate>
		</Setter>

		<Setter Property="Transitions">
			<Transitions>
				<BrushTransition Property="Background" Duration="0.2" />
				<ThicknessTransition Property="BorderThickness" Duration="0.1"
									 Easing="QuadraticEaseOut"/>
			</Transitions>
		</Setter>

		<Style Selector="^:focus-visible, ^:pointerover">
			<Setter Property="Background" Value="{StaticResource ButtonFocusBackgroundBrush}" />
			<Setter Property="BorderThickness" Value="6,0,0,0" />

			<!--<Style.Animations>
				<Animation Duration="1.0" IterationCount="infinite" PlaybackDirection="Alternate">
					<KeyFrame Cue="0%">
						<Setter Property="Background" Value="{StaticResource ButtonFocusBackgroundBrush}" />
					</KeyFrame>
					<KeyFrame Cue="100%">
						<Setter Property="Background" Value="{StaticResource ButtonNormalBackgroundBrush}" />
					</KeyFrame>
				</Animation>
			</Style.Animations>-->

		</Style>

		<Style Selector="^ /template/ Border#Border">
			<Setter Property="Transitions">
				<Transitions>
					<TransformOperationsTransition Property="RenderTransform" Duration="0.075" />
				</Transitions>
			</Setter>
		</Style>

		<Style Selector="^:pressed /template/ Border#Border">
			<Setter Property="RenderTransform" Value="scale(0.95)" />
		</Style>

		<Style Selector="^:disabled">
			<Setter Property="Foreground" Value="{StaticResource DisabledForegroundBrush}" />

			<Style Selector="^ /template/ Border">
				<Setter Property="Background" Value="{StaticResource DisabledBackgroundBrush}" />
				<Setter Property="BorderBrush" Value="{StaticResource DisabledBorderBrush}" />
			</Style>

		</Style>

	</ControlTheme>

</ResourceDictionary>
